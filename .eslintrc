{
  "extends": "airbnb-base",
  "rules": {
    "max-len": ["error", { "code": 140 }],
    "no-underscore-dangle": 0,
    "consistent-return": "off",
    "no-throw-literal": "off"
  },
  "env": {
    "node": true,
    "jest": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__STAGE__": false
  }
}
